<!-- Validation failure messages -->
<% if @friend_request.errors.any? %>
  <% @friend_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Friend Request</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_friend_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for sender_id -->
      <div class="form-group">
        <label for="sender_id" class="control-label">
          Sender
        </label>

        <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :email, @friend_request.sender_id), :class => "form-control") %>
      </div>

      <!-- Label and input for recipent_id -->
      <div class="form-group">
        <label for="recipent_id" class="control-label">
          Recipent
        </label>

        <input type="text" id="recipent_id" name="recipent_id" placeholder="Recipent" class="form-control" value="<%= @friend_request.recipent_id %>">
      </div>

      <button class="btn btn-success">
        Create Friend Request
      </button>
      or
      <a href="/friend_requests">Cancel</a>
    </form>
  </div>
</div>
